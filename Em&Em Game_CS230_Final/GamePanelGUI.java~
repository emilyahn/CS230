  * FILENAME: GamePanelGUI.java
  * WRITERS: Emily Ahn & Emery Otopalik
  * DATE: 12.13.2013
  * PURPOSE: This file is the overall driver for The Em&Em Game. You use 
  * this to actually run the game. It creates a JFrame with all interactive
  * game content and panels.
  ************************************************************************/

import javax.swing.JFrame;
import javax.swing.*;
import java.awt.geom.Dimension2D;
import java.awt.Dimension;
import java.awt.Color;

public class GamePanelGUI {

  public static void main (String[] args) {
    // creates and shows a Frame 
    JFrame frame = new JFrame("Em&Em Game");
    frame.getContentPane().setBackground(new Color(72,61,139));
    frame.getContentPane().setPreferredSize(new Dimension(600, 400));
    frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

    // make a tabbed pane with title, instruction, options, and scoreboard panels
    JTabbedPane tp = new JTabbedPane();
    tp.addTab("Home", new TitlePanel());
    tp.addTab("How-To", new InfoPanel());
    tp.addTab("Options", new OptionsPanel());
    tp.addTab("ScoreBoard", new ScoreboardPanel());

    frame.getContentPane().add(tp);
    frame.pack();
    frame.setVisible(true);
  }
  
}